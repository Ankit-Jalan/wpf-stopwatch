<Window x:Class="Stopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stopwatch"
        Width="216" Height="140">
    <Viewbox Stretch="Uniform" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="TextBoxTime" Text="00:00:00.000" FontSize="30" Margin="0,0,0,10" TabIndex="0"
                     Cursor="Arrow" AllowDrop="False" UndoLimit="0" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.ColumnSpan="2">
            </TextBox>
            <Button x:Name="ButtonRestart" Content="Start" Grid.Row="1" Click="StartButton_Click" TabIndex="1" Margin="0,0,5,0"/>
            <Button x:Name="ButtonReset" Content="Reset" Grid.Row="1" Grid.Column="1" Click="ResetButton_Click" TabIndex="2" Margin="5,0,0,0"/>
        </Grid>
    </Viewbox>
</Window>
